<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:gravity="center_vertical|right"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btnC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button_comandos"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:text="C"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnMaisMenos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button_comandos"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:text="+/-"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnPercentual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button_comandos"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:text="%"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnDivisao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button_comandos"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:layout_marginRight="1px"
            android:text="/"
            android:textColor="#ffffff"
            android:textSize="40sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:text="7"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:text="8"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:text="9"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnMultiplicacao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button_comandos"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:layout_marginRight="1px"
            android:text="x"
            android:textColor="#ffffff"
            android:textSize="40sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:text="5"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:text="6"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnSoma"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button_comandos"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:layout_marginRight="1px"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="40sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnSubtracao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button_comandos"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:layout_marginRight="1px"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/bg_button"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnPonto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@drawable/bg_button"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:text="."
            android:textColor="#ffffff"
            android:textSize="40sp" />

        <Button
            android:id="@+id/btnIgual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_button_comandos"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:layout_marginRight="1px"
            android:text="="
            android:textColor="#ffffff"
            android:textSize="40sp" />


    </LinearLayout>


</LinearLayout>